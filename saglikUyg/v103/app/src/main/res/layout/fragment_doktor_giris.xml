<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".Fragments.Doktor.DoktorGirisFragment">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Doktor Mail:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/girisDoktorEdtMail"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Şifre:"
        app:layout_constraintStart_toStartOf="@+id/girisDoktorEdtMail"
        app:layout_constraintTop_toBottomOf="@+id/girisDoktorEdtMail"/>
    <EditText
        android:id="@+id/girisDoktorEdtSifre"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        />
    <Button
        android:id="@+id/girisDoktorBtn"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:text="Giriş Yap"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/girisDoktorEdtSifre"
        app:layout_constraintTop_toBottomOf="@+id/girisDoktorEdtSifre"/>
</androidx.constraintlayout.widget.ConstraintLayout>