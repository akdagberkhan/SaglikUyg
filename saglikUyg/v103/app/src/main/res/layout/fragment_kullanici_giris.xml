<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".Fragments.Kullanici.KullaniciGirisFragment">


    <EditText
        android:id="@+id/girisKullaniciEdtMail"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/girisKullaniciEdtSifre"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Kullanıcı Mail:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Şifre:"
        app:layout_constraintStart_toStartOf="@+id/girisKullaniciEdtMail"
        app:layout_constraintTop_toBottomOf="@+id/girisKullaniciEdtMail" />

    <Button
        android:id="@+id/girisKullaniciBtn"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:text="Giriş Yap"
        app:layout_constraintEnd_toEndOf="@+id/girisKullaniciEdtSifre"
        app:layout_constraintTop_toBottomOf="@+id/girisKullaniciEdtSifre" />

</androidx.constraintlayout.widget.ConstraintLayout>